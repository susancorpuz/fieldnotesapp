<main role="main">

  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-8 col-md-8 mx-auto">
        <h1 class="font-weight-light">My Fieldnotes</h1>
        <p class="lead text-muted">My Fieldnotes is a basic template for
        the bibong estudyante, fieldworker, or researcher.
        This is still in early dev't stage. <a href="/pages/readme">Click here</a> or the "About" button above to know about this app.
        For suggestions, comments, or to test this app, you may need to signup. </p>
        <p>
          <a href="/pages/info" class="btn btn-primary my-2">View Info</a>
          <a href="/ideas/new" class="btn btn-secondary my-2">Start Notetaking</a>
        </p>
      </div>
    </div>
  </section>
<!-- REVIEW: -->
<h1>Note cards</h1>
  <% Idea.all.in_groups_of(3).each do |group| %>  <%# TODO: FIXME: pagination NOTE: orig is @ideas; change to Idea.all when push to Heroku, but pagintation will not work %>
<div class="album py-2 bg-light">
  <div class="container">

    <div class="row">
    <% group.each do |idea| %>
      <div class="col-md-4 col-md-4 col-md-4">
        <div class="card mb-4 shadow-sm">
        <% if idea %>
                <%= image_tag idea.picture_url(:thumb) if idea.picture.present? %>
                <%# TODO: if no uploaded photo use this placeholder  <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" role="img" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg> %>
                  <div class="card-body">
                  <p class="card-text"><h4><b><%= link_to(idea.name, idea_path(idea)) %></b></h4><b>Description: </b><%= idea.description %>  <small><%= link_to(idea.comments.count) %> comments </small></p>
                    <div class="d-flex justify-content-between align-items-center">
                      <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'View', (idea) %></button>
                        <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Edit', edit_idea_path(idea) %> </button>
                      </div>
                        <small class="text-muted"><%= idea.created_at.strftime("%a, %d %b %Y") %></small>
                    </div>
                  </div>
        <% end %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
  <% end %>
      <div>
        <nav aria-label="...">
          <ul class="pagination justify-content-center">
            <%= paginate @ideas %>
          </ul>
        </nav>
      </div>
</main>

