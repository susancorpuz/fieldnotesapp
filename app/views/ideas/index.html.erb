<main role="main">

  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="font-weight-light">My Fieldnotes</h1>
        <p class="lead text-muted">My Online Fieldnotes. </p>
        <p>
          <a href="/pages/info" class="btn btn-primary my-2">View Info</a>
          <a href="/ideas/new" class="btn btn-secondary my-2">Start Notetaking</a>
        </p>
      </div>
    </div>
  </section>

<div class="album py-5 bg-light">
<div class="container">
  <div class="row">
  <div class="col-md-12">
 
    <h1>Notes cards</h1>
        <% @ideas.in_groups_of(3) do |group| %>
       <div class="card mb-4 shadow-sm">  
        <div class="row">
          <% group.compact.each do |idea| %>

              <div class="col-md-4 col-md-4 col-md-4">
              <%= image_tag idea.picture_url(:thumb) if idea.picture.present? %>
               <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" role="img" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
              
              <div class="card-body">
               <p class="card-text"><h4><b><%= link_to idea.name, idea %></b></h4><b>Description: </b><%= idea.description %>
                  [posted on <%= idea.created_at.strftime("%A, %d %B %Y") %> | <%= idea.comments.count %> comments ]</p>
                       <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'View', (idea) %></button>
                  <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Edit', edit_idea_path(idea) %> </button>
                </div>
                <small class="text-muted">9 mins</small>
              </div>
              </div>
          </div>
              <% end %>
        </div>
        <% end %>
        
    </div>
    </div>
  </div>
  </div>
       
       
      </div>
    </div>
  </div>

</main>

