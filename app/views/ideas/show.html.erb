<main role="main" class="container">
  <div class="bg-light p-5 rounded">
    <div class="col-md-12">
<div class="row">
  <div class="col-md-8">
    <%= image_tag(@idea.picture_url, width: '100%') if @idea.picture.present? %>
  </div>
  <div class="col-md-4">
    <div class=row>
    <h3><%= @idea.name %></h3>
    <p>
    <small>posted on:<%= @idea.created_at.strftime("%A, %d %B %Y")  %></small><br>
    <small>updated on:<%= @idea.updated_at.strftime("%A, %d %B %Y") if @idea.updated_at.present? %></small></p>
    <p><b>Description: </b><%= @idea.description %></p>
    <p>
      <%= link_to 'Edit', edit_idea_path(@idea) %> |
      <%= link_to 'Destroy', @idea, data: { confirm: 'Are you sure?' }, method: :delete %> |
      <%= link_to 'Back', ideas_path %>
    </p>
  </div>
  <div
    <div class="border">
       <strong>Data Sources</strong>
       <ul class="list-group">
  <li class="list-group-item">Cras justo odio</li>
  <li class="list-group-item">Dapibus ac facilisis in</li>
  <li class="list-group-item">Morbi leo risus</li>
  <li class="list-group-item">Porta ac consectetur ac</li>
  <li class="list-group-item">Vestibulum at eros</li>
</ul>
    </div>
    </div>
  </div>
</main>

<section class='container'>
 <div class="bg-light p-5 rounded">
    <h3>Comments</h3>
      <% @comments.each do |comment| %>

    <strong>by: <%= comment.user_name %></strong>
    <br>
    <p><%= comment.body %> ( <%= comment.created_at %> )</p>
    <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></p>
<% end %>
    <strong><p>Add Comment:</p></strong>
    <%= render partial: 'comments/form', locals: { comment: @comment } %>
  </div>
</div>
</div>
</div>
</section>
